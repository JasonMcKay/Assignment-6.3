<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_remove"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jasonmckay.assignment63.ConfirmRemove">

    <TextView
        android:text="Confirm vehicle remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/activity_confirm_remove"
        app:layout_constraintTop_toTopOf="@+id/activity_confirm_remove"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_confirm_remove" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tableLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_confirm_remove"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/activity_confirm_remove">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Engine Type:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEngine" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Door Type:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblDoors" />
        </TableRow>

    </TableLayout>

    <Button
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:onClick="confirmRemove"
        app:layout_constraintLeft_toLeftOf="@+id/activity_confirm_remove"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="@+id/tableLayout2" />
</android.support.constraint.ConstraintLayout>
