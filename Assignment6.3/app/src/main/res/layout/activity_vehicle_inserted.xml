<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehicle_inserted"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jasonmckay.assignment63.VehicleInserted">

    <TextView
        android:text="@string/new_vehicle_added_successfully"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_vehicle_inserted"
        app:layout_constraintTop_toTopOf="@+id/activity_vehicle_inserted"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="@+id/activity_vehicle_inserted" />

    <Button
        android:text="@string/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenu"
        android:onClick="BackToMenu"
        app:layout_constraintLeft_toLeftOf="@+id/activity_vehicle_inserted"
        app:layout_constraintTop_toBottomOf="@+id/lblVehicleDetails"
        android:layout_marginTop="180dp"
        app:layout_constraintRight_toRightOf="@+id/activity_vehicle_inserted" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblVehicleDetails"
        app:layout_constraintLeft_toLeftOf="@+id/activity_vehicle_inserted"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="@+id/activity_vehicle_inserted"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
